include ./partials/_head.pug
body
  include ./partials/_nav.pug
  div.large-12.columns
    div.row
      div.large-12.columns
        div.large-6.columns
          p
            strong #{place.name}
            br 
            | #{place.city}, #{place.state}
    div.row
      div.large-2.columns
        h5 Activities
      div.large-2.columns.text-right
        h5 Current Conditions
    div.row
      each activity in place.activities
        div.large-2.columns.small-3
          if activity.thumbnail
            img(src=activity.thumbnail)
          //- else
          //-   img(src="https:/placehold.it/50x50&text=[img]")
        div.large-8.columns
          p #{activity.description}
      div.large-2.columns.weather
        include ./partials/_weather.pug
    div.row
      div.large-9.columns
        include ./partials/_googlemap.pug
    include ./partials/_footer.pug