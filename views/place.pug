include ./partials/_head.pug
body
  include ./partials/_nav.pug
  div.large-12.columns
    div.row
      div.large-12.columns
        div.large-6.columns
          p
            strong #{place.name}
            br 
            | #{place.city}, #{place.state}
        div.large-6.columns
          p Distance: #{place.distance} miles
    div.row
      div.large-2.columns
        h5 Activities
      div.large-2.columns.text-right
        h5 Current Conditions
    div.row
      each activity in place.activities
        div.large-2.columns.small-3
          img(src="https:/placehold.it/50x50&text=[img]")
        div.large-8.columns
          p #{activity.description}
        div.large-2.columns
          img(src="http://openweathermap.org/img/w/" + weather.weather[0].icon + ".png")
          span #{weather.weather[0].description}
          p Temperature: #{weather.main.temp}&deg;F
          p Humidity: #{weather.main.humidity}%
          p Pressure: #{weather.main.pressure}
          p wind: #{weather.wind.deg} #{weather.wind.speed}mph
    include ./partials/_footer.pug